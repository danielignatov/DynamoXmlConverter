@model DynamoXmlConverter.UI.Models.Home.IndexViewModel

@{
    ViewData["Title"] = "Dynamo XML Converter";
}

<div class="container text-center mt-5">
    <h1 class="display-4">Dynamo XML Converter</h1>
    <div class="row justify-content-center">
        <div class="col-6">
            <div class="mt-3">
                @foreach (var alert in Model.Alerts)
                {
                    await Html.RenderPartialAsync("_Alert", alert);
                }
            </div>
        </div>
    </div>
    <form enctype="multipart/form-data" method="post" asp-controller="Home" asp-action="Index">
        <div class="row justify-content-center">
            <div class="col-6">
                <div class="form-group mb-3">
                    <input type="file" name="files" class="form-control" multiple />
                </div>
            </div>
        </div>
        <div class="row justify-content-center">
            <div class="col-6">
                <div class="form-group">
                    <div class="d-grid gap-2">
                        <input type="submit" value="Upload" class="btn btn-primary">
                    </div>
                </div>
            </div>
        </div>
    </form>
</div>