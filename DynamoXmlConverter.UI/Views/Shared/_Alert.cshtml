@model DynamoXmlConverter.UI.Models.Shared.AlertViewModel

<div>
    @if (Model.AlertType == DynamoXmlConverter.UI.Models.Shared.AlertType.Success)
    {
        <div class="alert alert-success" role="alert">
            @Model.Text
        </div>
    }
    else if (Model.AlertType == DynamoXmlConverter.UI.Models.Shared.AlertType.Warning)
    {
        <div class="alert alert-warning" role="alert">
            @Model.Text
        </div>
    }
    else if (Model.AlertType == DynamoXmlConverter.UI.Models.Shared.AlertType.Info)
    {
        <div class="alert alert-info" role="alert">
            @Model.Text
        </div>
    }
    else if (Model.AlertType == DynamoXmlConverter.UI.Models.Shared.AlertType.Error)
    {
        <div class="alert alert-danger" role="alert">
            @Model.Text
        </div>
    }
</div>